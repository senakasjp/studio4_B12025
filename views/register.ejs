<%- include ("partials/header.ejs") %> <!-- Includes the header -->

<link rel="stylesheet" href="/public/css/styles.css"> <!-- Linking to the CSS file -->

<body>
    <div class="container"> <!-- Container for the registration form -->
        <h1 class="heading">Register</h1> 

        <!-- Registration form -->
        <form action="/register" method="post" class="register-form">
            <div class="form-group">
                <input type="text" name="username" id="username" placeholder="Username" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div> 

    <%- include ("partials/footer.ejs") %> <!-- Includes the footer -->
</body>
