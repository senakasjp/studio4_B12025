<%- include ("partials/header.ejs") %> <!-- Includes the header  -->

<link rel="stylesheet" href="/public/css/styles.css"> <!-- Linking to the external stylesheet -->

<body>  
    <div class="container"> <!-- Container for login form -->
        <h1 class="heading">Login</h1>  
        <form action="/auth" method="post" class="form"> <!-- Login form -->
            <div class="form-group"> <!-- Form group for username -->
                <input type="text" name="username" id="username" placeholder="Username" class="form-control" required> <!-- Username input field -->
            </div>
            <div class="form-group"> <!-- Form group for password -->
                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required> <!-- Password input field -->
            </div>
            <button type="submit" class="btn btn-primary">Login</button> <!-- Submit button for login form -->
        </form>
        <div class="additional-info"> <!-- Additional information section -->
            <h4>Don't have an account? <a href="register" class="link">Register here</a></h4> <!-- Link to register page -->
        </div>
    </div> <!-- Closing container div -->

    <%- include ("partials/footer.ejs") %> <!-- Includes the footer -->

</body>  
