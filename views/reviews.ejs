<%- include ("partials/header.ejs") %> <!-- Includes the header -->

<div class="container">
    <h2 style="color:#800020">Customer Reviews:</h2>  

    <% reviews.forEach(review => { %> <!-- Looping through each review -->
        <div class="review"> <!-- Container for each review -->
            <div class="reviewer"><%= review['Name'] %></div> 
            <div class="rating"><%= review.Rating %></div> 
            <div class="comment">  
                "<%= review.Comment %>"
            </div>
        </div>
    <% }); %>

    <div class="user-review-form"> <!-- Form for users to leave their own review -->
        <h3>Leave Your Review</h3>
        <form action="/submit-review" method="POST">
            <label for="name">Your Name:</label><br>
            <input type="text" id="name" name="name" required><br>
            <label for="rating">Rating:</label><br>
            <select id="rating" name="rating" required>
                <option value="⭐">⭐</option>
                <option value="⭐⭐">⭐⭐</option>
                <option value="⭐⭐⭐">⭐⭐⭐</option>
                <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
                <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
            </select><br>
            <label for="comment">Your Comment:</label><br>
            <textarea id="comment" name="comment" rows="4" required></textarea><br>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<%- include ("partials/footer.ejs") %> <!-- Includes the footer -->
